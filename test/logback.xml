<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Default level for all namespaces -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>

  <!-- Debug level for specific namespace -->
  <logger name="rpub.lib.db" level="TRACE" />
</configuration>
